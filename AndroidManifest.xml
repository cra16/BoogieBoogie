<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.boogieboogie"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.boogieboogie.BoogieBoogie"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.boogieboogie.LoadingActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.boogieboogie.FindActivity"
            android:label="@string/title_activity_find" >
        </activity>
        <activity android:name="com.example.boogieboogie.FindInternetActivity" >
        </activity>
        <activity android:name="com.example.boogieboogie.NaverBooks" >
        </activity>
        <activity
            android:name="com.example.boogieboogie.FindIsbnActivity"
            android:label="@string/title_activity_find_isbn" >
        </activity>
    </application>

</manifest>